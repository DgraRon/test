@model ServiceCatalogBGC_V2.ViewModels.AdminUsers.CreateUserVM
@{
    ViewData["Title"] = "Create User";
}

<div class="row justify-content-center">
    <!-- บีบความกว้างหน้าแบบฟอร์ม: 12 บนมือถือ, 10 บน lg, 8 บน xl -->
    <div class="col-12 col-lg-10 col-xl-8">
        <div class="card shadow-sm">
            <div class="card-header d-flex align-items-center">
                <h5 class="mb-0">Create User</h5>
            </div>

            <div class="card-body">
                <form asp-action="Create" method="post">
                    <!-- ชื่อ -->
                    <div class="row g-3 mb-1">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- อีเมล (Select2) -->
                    <div class="mb-1">
                        <label class="form-label">Email</label>
                        <select asp-for="Email"
                                id="Email"
                                class="form-select"
                                data-placeholder="พิมพ์หรือเลือกอีเมล…"
                                style="width:100%">
                            <option value="" selected></option>
                            @{
                                var devs = (IEnumerable<string>?)ViewBag.DeveloperEmails ?? Enumerable.Empty<string>();
                                foreach (var e in devs.Distinct().OrderBy(x => x))
                                {
                                    <option value="@e">@e</option>
                                }
                            }
                            @if (!string.IsNullOrWhiteSpace(Model?.Email))
                            {
                                <option value="@Model.Email" selected hidden>@Model.Email</option>
                            }
                        </select>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- รหัสผ่าน -->
                    <div class="row g-3 mb-1">
                        <div class="col-md-6">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- บทบาท -->
                    <div class="mb-2">
                        <label asp-for="Role" class="form-label">Role</label>
                        <select asp-for="Role" asp-items="Model.RoleOptions" class="form-select"></select>
                        <span asp-validation-for="Role" class="text-danger small"></span>
                    </div>

                    <!-- ปุ่ม -->
                    <div class="mt-3 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>

            <div class="card-footer text-muted small">
                Tips: กรอกอีเมลได้ทั้งเลือกจากรายการหรือพิมพ์ใหม่
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const $email = $('#Email');

            $email.select2({
                theme: 'bootstrap-5',
                placeholder: $email.data('placeholder') || 'พิมพ์หรือเลือกอีเมล…',
                tags: true,
                allowClear: true,
                width: 'resolve',
                createTag: function (params) {
                    const term = (params.term || '').trim();
                    const ok = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/.test(term);
                    if (!term || !ok) return null;
                    return { id: term, text: term, newTag: true };
                }
            });
        });
    </script>
}
