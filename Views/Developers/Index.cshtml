@model IEnumerable<ServiceCatalogBGC_V2.Models.Developer>

@{
    ViewData["Title"] = "Developers";
}

<div class="d-flex align-items-center mb-3">
    <h4 class="me-auto mb-0">Developer List</h4>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Developer
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-sm table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th style="width:60px;">No.</th>
                <th>Email</th>
                <th>Status</th>
                <th style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                var index = 1;
            }
            @foreach (var dev in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@dev.Email</td>
                    <td>
                        @if (dev.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@dev.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil"></i> Edit
                        </a>

                        <form asp-action="Delete" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@dev.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('ยืนยันลบ Developer นี้?');">
                                Delete
                            </button>
                        </form>

                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
